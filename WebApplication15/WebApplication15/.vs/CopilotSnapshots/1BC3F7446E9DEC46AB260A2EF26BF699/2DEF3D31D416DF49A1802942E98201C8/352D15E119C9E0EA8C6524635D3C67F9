.shooting_star:nth-child(10) { top: 25%; left: 50%; animation-delay: 2.3s; }

/* Add more random stars */
.shooting_star:nth-child(n+11):nth-child(-n+20) {
    animation-delay: calc(var(--i) * 0.2s);
    top: calc(var(--i) * 8%);
    left: calc(var(--i) * 5%);
}

/* Tail Animation */
@keyframes tail {
    0% {
        height: 0;
        opacity: 1;
    }
    30% {
        height: 80px;
        opacity: 1;
    }
    100% {
        height: 0;
        opacity: 0;
    }
}

/* Movement Animation */
@keyframes move {
    0% {
        transform: translateX(0) translateY(0);
    }
    100% {
        transform: translateX(-400px) translateY(400px);
    }
}

