.shooting_star:nth-child(4) { top: 80%; left: 60%; animation-delay: 0.9s; }
.shooting_star:nth-child(5) { top: 20%; left: 80%; animation-delay: 1.2s; }
.shooting_star:nth-child(6) { top: 60%; left: 30%; animation-delay: 1.5s; }
.shooting_star:nth-child(7) { top: 75%; left: 15%; animation-delay: 1.7s; }
.shooting_star:nth-child(8) { top: 40%; left: 90%; animation-delay: 1.9s; }
