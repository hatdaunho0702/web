@model List<WebApplication15.Models.DanhGia>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Chưa có đánh giá nào cho sản phẩm này. Hãy là người đầu tiên!</div>
}
else
{
    <ul class="list-group">
        @foreach (var dg in Model)
        {
            <li class="list-group-item">
                <p class="mb-1">
                    <strong>
                        @(dg.NguoiDung?.HoTen ?? "Ẩn danh")
                    </strong>
                    <span class="float-end text-warning">
                        @if (dg.Diem.HasValue && dg.Diem.Value > 0)
                        {
                            for (int i = 0; i < dg.Diem.Value; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                        }
                    </span>
                </p>
                <small class="text-muted">Ngày: @(dg.NgayDanhGia.HasValue ? dg.NgayDanhGia.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</small>
                <p class="mt-2">@dg.NoiDung</p>
            </li>
        }
    </ul>
}
