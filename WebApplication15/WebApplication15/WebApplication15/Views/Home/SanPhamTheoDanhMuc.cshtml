
<link href="~/HienSP.css" rel="stylesheet" />
@model WebApplication15.Models.HomeViewModel

@{
    ViewBag.Title = ViewBag.TenDM;
}

<div class="container my-4">
    <h3 class="mb-4">Sản phẩm thuộc danh mục: @ViewBag.TenDanhMuc</h3>

    @if (Model == null || Model.DsSanPham == null || !Model.DsSanPham.Any()) // Đã thêm kiểm tra null an toàn
    {
        <div class="alert alert-warning">Hiện chưa có sản phẩm nào thuộc danh mục này.</div>
    }
    else
    {
        <div class="row">
            @foreach (var sp in Model.DsSanPham) // Lặp qua DsSanPham
            {
                <div class="col-md-4 mb-4">
                    <a href="@Url.Action("ChiTietSP", "Home", new { maSP = sp.MaSP })" class="product-link d-block h-100">
                        <div class="card h-100 shadow-sm">
                            <img src="~/Content/images/@sp.HinhAnh" alt="@sp.TenSP" class="card-img-top" />
                            <div class="card-body">
                                <h5 class="card-title">@sp.TenSP</h5>
                                <p class="card-text">Giá: @String.Format("{0:N0} đ", sp.GiaBan)</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>