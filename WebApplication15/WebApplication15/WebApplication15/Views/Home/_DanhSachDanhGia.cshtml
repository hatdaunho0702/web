@model List<WebApplication15.Models.DanhGia>
<link href="~/ThemDanhGia.css" rel="stylesheet" />
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Chưa có đánh giá nào cho sản phẩm này. Hãy là người đầu tiên!</div>
}
else
{
    <ul class="list-group">
        @foreach (var dg in Model)
        {
            <li class="list-group-item">
                <p class="mb-1">
                    <strong>
                        @dg.NguoiDung.HoTen
                    </strong>
                    <span class="float-right text-warning">
                        @for (int i = 0; i < dg.Diem; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </span>
                </p>
                <small class="text-muted">Ngày: @dg.NgayDanhGia</small>
                <p class="mt-2">@dg.NoiDung</p>

                @if (!string.IsNullOrEmpty(dg.TraLoiAdmin))
                {
                    <div class="mt-2 p-2 bg-light border rounded">
                        <strong>Admin:</strong>
                        <p>@dg.TraLoiAdmin</p>
                    </div>
                }
            </li>

        }
    </ul>
}

