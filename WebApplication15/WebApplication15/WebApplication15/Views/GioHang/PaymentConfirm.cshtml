@model WebApplication15.Models.Cart
@{
    ViewBag.Title = "Xác nhận thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-center text-primary">Xác nhận Thanh toán</h2>

@if (Model.list == null || Model.list.Count == 0)
{
    <div class="alert alert-warning text-center">
        Không có sản phẩm trong giỏ hàng. <a href="@Url.Action("Index", "Home")">Quay lại mua hàng</a>.
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light fw-bold">Sản phẩm trong đơn hàng</div>
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr class="table-light">
                                <th>Sản phẩm</th>
                                <th class="text-center">Giá (đ)</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Thành tiền (đ)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.list)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@Url.Content("~/Content/HinhAnhSP/" + item.AnhBia)" width="60" class="me-3" />
                                            <span>@item.TenSP</span>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.GiaBan.ToString("N0")</td>
                                    <td class="text-center">@item.SoLuong</td>
                                    <td class="text-end fw-bold">@item.ThanhTien.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">Tóm tắt đơn hàng</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tổng tiền hàng:</span>
                        <span class="fw-bold">@Model.TongThanhTien().ToString("N0") đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <span class="fw-bold">0 đ</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between text-danger fs-5">
                        <span class="fw-bold">TỔNG CỘNG:</span>
                        <span class="fw-bold">@Model.TongThanhTien().ToString("N0") đ</span>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("PaymentReview", "GioHang")" class="btn btn-success w-100 btn-lg">
                            Xác nhận thanh toán
                        </a>
                    </div>
                    <div class="mt-2 text-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100">Quay lại giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
