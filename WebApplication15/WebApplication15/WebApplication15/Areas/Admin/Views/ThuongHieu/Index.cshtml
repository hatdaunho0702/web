@model List<WebApplication15.Models.ThuongHieu>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>📦 Quản lý thương hiệu</h2>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">+ Thêm Thương Hiệu</a>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>⚠️ Lỗi!</strong> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<table class="table table-bordered table-datatable">
    <thead class="table-secondary">
        <tr>
            <th>Mã TH</th>
            <th>Tên Thương Hiệu</th>
            <th>Quốc Gia</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
            <tr>
                <td>@sp.MaTH</td>
                <td>@sp.TenTH</td>
                <td>@sp.QuocGia</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = sp.MaTH })">Sửa</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = sp.MaTH })" onclick="return confirm('Bạn chắc chắn muốn xóa thương hiệu này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
