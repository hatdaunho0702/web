@model WebApplication15.Models.DanhGia

@{
    ViewBag.Title = "Thêm đánh giá";
}

<h2>Thêm đánh giá</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Người dùng</label>
        @Html.DropDownList("MaND", null, "Chọn người dùng", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Sản phẩm</label>
        @Html.DropDownList("MaSP", null, "Chọn sản phẩm", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Điểm</label>
        @Html.EditorFor(model => model.Diem, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label>Nội dung</label>
        @Html.TextArea("NoiDung", null, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        <label>Ngày đánh giá</label>
        @Html.TextBoxFor(m => m.NgayDanhGia, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Lưu</button>
}
