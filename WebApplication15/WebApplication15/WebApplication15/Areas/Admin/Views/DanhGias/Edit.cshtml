@model WebApplication15.Models.DanhGia

@{
    ViewBag.Title = "Sửa đánh giá";
}

<h2>Sửa đánh giá</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.MaDG)

    <div class="form-group">
        <label>Người dùng</label>
        @Html.DropDownList("MaND", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Sản phẩm</label>
        @Html.DropDownList("MaSP", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Điểm</label>
        @Html.EditorFor(model => model.Diem, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label>Nội dung</label>
        @Html.TextArea("NoiDung", Model.NoiDung, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        <label>Trả lời admin</label>
        @Html.TextAreaFor(m => m.TraLoiAdmin, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group">
        <label>Thời gian trả lời</label>
        @Html.TextBoxFor(m => m.ThoiGianTraLoi, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cập nhật</button>
}
