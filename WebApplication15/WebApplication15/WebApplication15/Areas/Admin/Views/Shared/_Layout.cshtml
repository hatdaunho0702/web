<!DOCTYPE html>
<html>
<head>
    <title>Admin - @ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
</head>
<body>

    <div class="d-flex">

        <!-- SIDEBAR -->
        <div class="bg-dark text-white p-3" style="width: 250px; height:100vh;">
            <h4 class="text-center mb-4">ADMIN PANEL</h4>

            <a class="d-block text-white mb-3" href="@Url.Action("Index","Dashboard", new {area="Admin"})">📊 Dashboard</a>
            <a class="d-block text-white mb-3" href="@Url.Action("Index","SanPham", new {area="Admin"})">📦 Sản phẩm</a>
            <a class="d-block text-white mb-3" href="@Url.Action("Index","LoaiSP", new {area="Admin"})">📂 Loại SP</a>
            <a class="d-block text-white mb-3" href="@Url.Action("Index","ThuongHieu", new {area="Admin"})">🏷 Thương hiệu</a>
            <a class="d-block text-white mb-3" href="@Url.Action("Index","DonHang", new {area="Admin"})">🧾 Đơn hàng</a>
            <a class="d-block text-white mb-3" href="@Url.Action("Index","LienHes", new {area="Admin"})">📞 Liên hệ</a>
            <a class="d-block text-white mb-3" href="@Url.Action("Index","DanhGias", new {area="Admin"})">⭐ Đánh giá</a>
            <a class="d-block text-white mb-3" href="@Url.Action("Index","TaiKhoan", new {area="Admin"})">👤 Tài khoản</a>

            <hr />
            <a class="d-block text-warning" href="/User/Logout">Đăng xuất</a>
        </div>

        <!-- CONTENT -->
        <div class="p-4" style="flex:1;">
            @RenderBody()
        </div>

    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables cho tất cả bảng có class "table-datatable"
            $('table.table-datatable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
                },
                pageLength: 10,
                order: [[0, 'asc']]
            });
        });
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
