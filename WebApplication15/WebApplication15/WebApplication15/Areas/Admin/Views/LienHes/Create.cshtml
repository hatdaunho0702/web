@model WebApplication15.Models.LienHe

@{
    ViewBag.Title = "Tạo liên hệ";
}

<h2>Tạo liên hệ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Họ tên")
        @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Email")
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
    </div>

    <div class="form-group">
        @Html.Label("Số điện thoại")
        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Nội dung")
        @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control", rows = 4 })
    </div>

    <button class="btn btn-success mt-2">Thêm liên hệ</button>
}

<p class="mt-3">
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
</p>
