@model IEnumerable<WebApplication15.Models.LienHe>

@{
    ViewBag.Title = "Danh sách liên hệ";
}

<h2 class="mb-3">Danh sách liên hệ</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex">
        @* Nút tạo mới *@
        @Html.ActionLink("Tạo liên hệ mới", "Create", null, new { @class = "btn btn-success me-2" })

        @* Nút xóa nhiều (yêu cầu action DeleteSelected ở controller nếu muốn dùng) *@
        <button id="btnDeleteSelected" class="btn btn-danger me-2">Xóa đã chọn</button>

        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Làm mới</a>
    </div>

    <form class="d-flex" method="get" action="@Url.Action("Index")">
        <input type="text" name="q" class="form-control me-2" placeholder="Tìm theo tên, email, nội dung..." value="@(Request.QueryString["q"] ?? "")" />
        <button class="btn btn-primary" type="submit">Tìm</button>
    </form>
</div>

<form id="bulkDeleteForm" method="post" action="@Url.Action("DeleteSelected", "LienHes", new { area = "Admin" })">
    @Html.AntiForgeryToken()

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:40px;"><input id="chkAll" type="checkbox" /></th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Nội dung</th>
                <th>Ngày gửi</th>
                <th style="width:220px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center">Chưa có liên hệ nào.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedIds" value="@item.MaLH" class="chkItem" />
                        </td>
                        <td>@Html.DisplayFor(m => item.HoTen)</td>
                        <td>@Html.DisplayFor(m => item.Email)</td>
                        <td>@Html.DisplayFor(m => item.SoDienThoai)</td>
                        <td style="max-width: 420px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@item.NoiDung">
                            @item.NoiDung
                        </td>
                        <td>@item.NgayGui</td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaLH, area = "Admin" }, new { @class = "btn btn-info btn-sm me-1" })
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaLH, area = "Admin" }, new { @class = "btn btn-warning btn-sm me-1" })
                            @using (Html.BeginForm("Delete", "LienHes", new { area = "Admin", id = item.MaLH }, FormMethod.Post, new { onsubmit = "return confirm('Bạn chắc chắn muốn xóa liên hệ này?');", style = "display:inline" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</form>

@section scripts {
    <script>
        // Chọn / bỏ chọn tất cả
        document.getElementById('chkAll').addEventListener('change', function () {
            const checked = this.checked;
            document.querySelectorAll('.chkItem').forEach(ch => ch.checked = checked);
        });

        // Xóa nhiều (bulk)
        document.getElementById('btnDeleteSelected').addEventListener('click', function (e) {
            e.preventDefault();

            const selected = Array.from(document.querySelectorAll('.chkItem:checked')).map(c => c.value);
            if (selected.length === 0) {
                alert('Vui lòng chọn ít nhất một liên hệ để xóa.');
                return;
            }

            if (!confirm('Bạn chắc chắn muốn xóa ' + selected.length + ' liên hệ đã chọn?')) return;

            // tạo input ẩn gửi danh sách id
            const form = document.getElementById('bulkDeleteForm');

            // Xóa các input cũ nếu có
            document.querySelectorAll('input[name="idsToDelete"]').forEach(n => n.remove());

            selected.forEach(id => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'idsToDelete';
                input.value = id;
                form.appendChild(input);
            });

            form.submit();
        });
    </script>
}
