@model WebApplication15.Models.TaiKhoan
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>➕ Thêm tài khoản mới</h2>

@using (Html.BeginForm("Create", "TaiKhoan", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Tên Đăng Nhập <span class="text-danger">*</span></label>
        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", required = "required", placeholder = "Nhập tên đăng nhập" })
        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Mật Khẩu <span class="text-danger">*</span></label>
        @Html.PasswordFor(m => m.MatKhauHash, new { @class = "form-control", required = "required", placeholder = "Nhập mật khẩu" })
        @Html.ValidationMessageFor(m => m.MatKhauHash, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Vai Trò <span class="text-danger">*</span></label>
        @Html.DropDownListFor(m => m.VaiTro, new List<SelectListItem>
        {
            new SelectListItem { Text = "Admin", Value = "Admin" },
            new SelectListItem { Text = "KhachHang", Value = "KhachHang" }
        }, "-- Chọn Vai Trò --", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.VaiTro, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Người Dùng <span class="text-danger">*</span></label>
        @Html.DropDownListFor(m => m.MaND, (SelectList)ViewBag.MaND, "-- Chọn Người Dùng --", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.MaND, "", new { @class = "text-danger" })
        <small class="form-text text-muted">Chọn người dùng để liên kết với tài khoản này</small>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">💾 Lưu</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">❌ Hủy</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
